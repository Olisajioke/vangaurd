<%- include("partials/header") %>

<div class="container mt-4">

  <div class="rel-hero">
    <h2>Optometry Connections</h2>
    <p>Meet colleagues seeking meaningful relationships</p>
  </div>

  <div class="row">
    <% relationships.forEach(r => { %>
      <div class="col-md-4 mb-4">
        <div class="card rel-card">

          <% if (r.image1) { %>
            <img src="/uploads/<%= r.image1 %>" class="rel-avatar">
          <% } %>

          <div class="card-body">
            <h5 class="card-title"><%= r.name %>, <%= r.age %></h5>
            <p class="mb-1"><strong>City:</strong> <%= r.city %></p>
            <p class="mb-2"><strong>Looking for:</strong> <%= r.looking_for %></p>

            <a href="/relationships/<%= r.post_id %>" class="btn btn-outline-danger btn-sm">
              View Profile
            </a>
          </div>

        </div>
      </div>
    <% }) %>
  </div>

</div>

<%- include("partials/footer") %>
