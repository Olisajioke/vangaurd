<%- include("partials/header") %>

<div class="container py-4">

  <!-- HERO WITH IMAGE -->
  <div class="jumbotron rel-hero-img"
       style="background-image:url('/images/pink_tree.jpg')">

    <div class="rel-hero-overlay">
      <h2 class="mb-1 display-4 fw-bold">SAUDI ROMANCE</h2>
      <p class="mb-0 text-white-75 fw-lighter-bold"> Weekends don't have to be lonely, cold nights don't need to sting harder than they already do. <br> Link up with someone below!</p>
    </div>
  </div>

  <!-- GRID -->
  <div class="row g-4 mt-4">

    <!-- ADD PROFILE CARD (always visible) -->
    <div class="col-md-4">
      <a href="/create-relationship" class="rel-add-card card h-100 text-center text-decoration-none">
        <div class="rel-add-inner">
          <div class="rel-add-icon">❤</div>
          <h5 class="mb-1">Create Profile!</h5>
          <p class="text-muted mb-0">Introduce yourself</p>
        </div>
      </a>
    </div>

    <% if (relationships && relationships.length > 0) { %>

      <% relationships.forEach(function(r) { %>
        <div class="col-md-4">
          <div class="rel-card card h-100">

            <!-- AVATAR -->
            <% if (r.image1) { %>
              <img src="/uploads/<%= r.image1 %>" class="rel-avatar">
            <% } else { %>
              <div class="rel-avatar rel-avatar-placeholder">
                <i class="bi bi-person"></i>
              </div>
            <% } %>

            <!-- BODY -->
            <div class="card-body">

              <h5 class="rel-name">
                <%= r.name || "Unnamed" %>
                <% if (r.age) { %>, <%= r.age %><% } %>
              </h5>

              <div class="rel-meta">
                <div><span>City</span><b><%= r.city || "—" %></b></div>
                <div><span>Looking for</span><b><%= r.looking_for || "—" %></b></div>
              </div>

              <a href="/relationships/<%= r.post_id %>"
                 class="btn btn-outline-danger btn-sm mt-3">
                View Profile
              </a>

            </div>

          </div>
        </div>
      <% }) %>

    <% } %>

  </div>

</div>

<style>
  .rel-hero-img {
  min-height: 48vh;        
  max-height: 560px;         
  border-radius: 18px;
  background-size: cover;
  background-position: center;
  position: relative;
  overflow: hidden;
}

.rel-hero-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(rgba(40,20,20,.55), rgba(40,20,20,.55));
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 28px;
}

.rel-hero-overlay h2 {
  letter-spacing: 2px;
}


.rel-add-card {
  border-radius: 18px;
  border: none;
  background: linear-gradient(135deg,#ff5c7a,#d93c5f);
  color: #fff;
  transition: transform .18s ease, box-shadow .18s ease;
  overflow: hidden;
  position: relative;
}

.rel-add-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 14px 32px rgba(217,60,95,.35);
  color: #fff;
}

.rel-add-inner {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 28px 18px;
  position: relative;
  z-index: 2;
}

/* Decorative big faint heart */
.rel-add-card::before {
  content: "❤";
  position: absolute;
  font-size: 160px;
  color: rgba(255,255,255,.08);
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  pointer-events: none;
}

/* Icon heart */
.rel-add-icon {
  font-size: 34px;
  line-height: 1;
  margin-bottom: 10px;
  color: #fff;
}

.rel-add-card p {
  color: rgba(255,255,255,.85);
}

</style>

<%- include("partials/footer") %>
