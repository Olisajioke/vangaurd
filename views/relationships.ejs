<%- include("partials/header") %>

<div class="container py-4">

  <!-- HERO WITH IMAGE -->
  <div class="jumbotron rel-hero-img"
       style="background-image:url('/images/pink_tree.jpg')">

    <div class="rel-hero-overlay">
      <h2 class="mb-1 display-4 fw-bold">SAUDI ROMANCE</h2>
      <p class="mb-0 text-white-75 fw-lighter-bold"> Weekends don't have to be lonely, cold nights don't need to sting harder than they already do. <br> Link up with someone below!</p>
    </div>
  </div>

  <!-- GRID -->
  <div class="row g-4 mt-4">

    <!-- ADD PROFILE CARD (always visible) -->
    <div class="col-md-4">
      <a href="/create-relationship" class="rel-add-card card h-100 text-center text-decoration-none">
        <div class="rel-add-inner">
          <div class="rel-add-icon">❤</div>
          <h5 class="mb-1">Create Profile!</h5>
          <p class="text-muted mb-0">Introduce yourself</p>
        </div>
      </a>
    </div>

    <% if (relationships && relationships.length > 0) { %>

      <% relationships.forEach(function(r) { %>
        <div class="col-md-4">
          <div class="rel-card card h-100">

            <!-- AVATAR -->
            <% if (r.image1) { %>
              <img src="/uploads/<%= r.image1 %>" class="rel-avatar">
            <% } else { %>
              <div class="rel-avatar rel-avatar-placeholder">
                <i class="bi bi-person"></i>
              </div>
            <% } %>

            <!-- BODY -->
            <div class="card-body">

              <h5 class="rel-name">
                <%= r.name || "Unnamed" %>
                <% if (r.age) { %>, <%= r.age %><% } %>
              </h5>

              <div class="rel-meta">
                <div><span>City</span><b><%= r.city || "—" %></b></div>
                <div><span>Looking for</span><b><%= r.looking_for || "—" %></b></div>
              </div>

              <a href="/relationships/<%= r.post_id %>"
                 class="btn btn-outline-danger btn-sm mt-3">
                View Profile
              </a>

            </div>

          </div>
        </div>
      <% }) %>

    <% } %>

  </div>

</div>

<style>
  .rel-hero-img {
  height: 220px;
  border-radius: 16px;
  background: linear-gradient(135deg,#4b2e2b,#6a3f3a);
  background-size: cover;
  background-position: center;
  position: relative;
  overflow: hidden;
}

.rel-hero-overlay {
  position: absolute;
  inset: 0;
  background: rgba(40,20,20,.45);
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 20px;
}
</style>

<%- include("partials/footer") %>
