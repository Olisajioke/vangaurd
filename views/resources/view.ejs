<%- include("../partials/header") %>

<section class="med-article">
  <div class="med-article__container">

    <!-- Hero Header -->
    <header class="med-article__hero"
      <% if (article.image) { %>
         style="background-image:url('<%= article.image || "../images/articles.jpg" %>')">
      <% } %>
    
      <div class="med-article__hero-overlay"></div>

      <div class="med-article__hero-content">
        <h1 class="display-4 fw-bold med-article__title"><%= article.title %></h1>

        <% if (article.subtitle) { %>
          <div class="text-black fw-bold med-article__subtitle"><%= article.subtitle %></div>
        <% } %>

        <div class="med-article__meta">
          <div class="med-article__author">
            <img class="med-avatar"
              src="https://www.gravatar.com/avatar/<%= article.email_hash || '' %>?s=64&d=mp"
              alt="author">
            <span>Dr. <%= article.fname %> <%= article.lname %></span>
          </div>

          <span class="med-dot">â€¢</span>

          <time>
            Updated <%= new Date(article.updated_at).toLocaleDateString(undefined,{year:'numeric',month:'short',day:'numeric'}) %>
          </time>
        </div>

        <% if (userRole === "user" || userRole === "admin") { %>
          <a href="/resources/<%= article.slug %>/edit" class="med-article__edit-btn">

            Edit Article
          </a>
        <% } %>
      </div>
    </header>

    <!-- Body -->
    <div class="med-card">
      <article class="med-article__body">
        <%- article.content %>
      </article>
    </div>

    
    <!-- Contributors -->
    <% if (contributors && contributors.length > 0) { %>
      <section class="med-card med-contributors-card">
        <div class="med-contributors-card__header">
          <h3>Contributors</h3>
          <span class="med-contributors-count">
            <%= contributors.length %>
          </span>
        </div>

        <div class="med-contributors-list">
          <% contributors.forEach(c=>{ %>
            <a href="/user/<%= c.id %>" class="med-contributor">
              <div class="med-contributor-avatar">
                <span>ðŸ‘¤</span>
              </div>
              <div class="med-contributor-name">
                <%= c.fname %> <%= c.lname %>
              </div>
            </a>
          <% }) %>
        </div>
      </section>
    <% } %>


    <!-- Comment Form -->
    <section class="med-card med-comments">
      <h3 class="med-comments__title">Discussion</h3>

      <% if (userId) { %>
        <form class="med-comment-form" method="POST" action="/resources/comments/new">
          <input type="hidden" name="post_id" value="<%= article.id %>">
          <input type="hidden" name="post_type" value="resource">

          <textarea name="content" rows="3" placeholder="Share professional insight..." required></textarea>
          <div class="med-comment-form__actions">
            <button type="submit">Post</button>
          </div>
        </form>
      <% } else { %>
        <div class="med-empty">Please log in to join the discussion.</div>
      <% } %>

      <% if (comments.length === 0) { %>
        <div class="med-empty">No discussion yet.</div>
      <% } %>

      <% comments.forEach(comment=>{ %>
        <div class="med-comment">
          <img class="med-avatar"
            src="https://www.gravatar.com/avatar/<%= comment.email_hash || '' %>?s=64&d=mp"
            alt="user">

          <div class="med-comment__content">
            <div class="med-comment__header">
              <strong><%= comment.fname %> <%= comment.lname %></strong>
              <span class="med-dot">â€¢</span>
              <time>
                <%= new Date(comment.created_at).toLocaleDateString(undefined,{year:'numeric',month:'short',day:'numeric'}) %>
              </time>
            </div>

            <div class="med-comment__text">
              <%= comment.content %>
            </div>

            <% if (userId === comment.user_id || userRole === "admin") { %>
              <div class="med-comment__actions">
                <button class="comment-edit-btn"
                  data-id="<%= comment.id %>"
                  data-content="<%= comment.content.replace(/\"/g,'&quot;') %>">
                  Edit
                </button>
                <button class="comment-delete-btn" data-id="<%= comment.id %>">
                  Delete
                </button>
              </div>
            <% } %>
          </div>
        </div>
      <% }) %>
    </section>

  </div>
</section>

