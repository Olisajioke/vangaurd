<%- include("../partials/header") %>

<section class="resource-new-hero">
  <div class="container text-center">
    <h1 class="mb-2">New Clinical Resource</h1>
    <p class="text-muted">
      Create evidence-based guidance for optometrists practicing in Saudi Arabia.
    </p>
  </div>
</section>

<section class="container py-5">
  <div class="resource-editor-card mx-auto">

    <form action="/resources/new" method="POST" enctype="multipart/form-data">

      <!-- TITLE -->
      <div class="mb-4">
        <label class="form-label fw-semibold">Resource Title</label>
        <input
          type="text"
          name="title"
          class="form-control form-control-lg"
          placeholder="e.g. Licensing Pathway for Foreign Optometrists"
          required>
      </div>

      <!-- SUBTITLE -->
      <div class="mb-4">
        <label class="form-label fw-semibold">Subtitle</label>
        <input
          type="text"
          name="subtitle"
          class="form-control form-control-lg"
          placeholder="e.g. Ten Truths You should know"
          required>
      </div>

      <!-- COVER IMAGE -->
      <div class="mb-4">
        <label class="form-label fw-semibold">Cover Image</label>
        <input
          type="file"
          name="image"
          accept="image/*"
          class="form-control">
        <small class="text-muted">
          Optional. Recommended: 1200Ã—600 clinical illustration or infographic.
        </small>
      </div>
       <!-- CONTENT -->
      <div class="form-group">
            <label for="content">Clinical Guidance...</label>
            <textarea id="content" name="content" class="form-control form-label" placeholder="Write structured, practical, evidence-based guidance..." required></textarea>
      </div>
      <!-- ACTIONS -->
      <div class="d-flex justify-content-between align-items-center mt-4">
        <a href="/resources" class="btn btn-light border">Cancel</a>

        <button type="submit" class="btn btn-primary px-4">
          <i class="fas fa-save me-2"></i>
          Publish Resource
        </button>
      </div>

    </form>

  </div>
</section>

<style>
.resource-new-hero {
  background: linear-gradient(180deg,#f3f7ff,#fbfdff);
  border-bottom: 1px solid #e6ecf5;
  padding: 50px 20px;
}

.resource-editor-card {
  max-width: 820px;
  background: #ffffff;
  border: 1px solid #e6ecf5;
  border-radius: 14px;
  padding: 36px 34px;
  box-shadow: 0 10px 28px rgba(30,60,120,0.06);
}

.resource-editor-card .form-label {
  color: #2a3a55;
}

.resource-editor-card .form-control {
  border-radius: 10px;
  border: 1px solid #d9e2ef;
  padding: 12px 14px;
}

.resource-editor-card .form-control:focus {
  border-color: #6ea8fe;
  box-shadow: 0 0 0 3px rgba(110,168,254,0.15);
}

.resource-textarea {
  min-height: 320px;
}

/* CKEditor styling */
.ck-editor__editable_inline {
  min-height: 320px;
  border-radius: 10px !important;
}

.ck.ck-editor__main > .ck-editor__editable {
  border: 1px solid #d9e2ef !important;
  padding: 14px 16px !important;
  font-family: "Inter","Segoe UI",sans-serif;
  line-height: 1.7;
  font-size: 15px;
}

.ck-toolbar {
  border-radius: 10px 10px 0 0 !important;
  border: 1px solid #d9e2ef !important;
}
</style>

<!-- CKEditor -->
<script src="/ckeditor/ckeditor.js"></script>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    CKEDITOR.replace("content", { height: 300 });
  });
</script>


<%- include("../partials/footer") %>
