<%- include("partials/header") %>

<!-- Jobs Hero -->
<section class="hero-jobs d-flex align-items-center justify-content-center text-center text-white" style="background:
       linear-gradient(rgba(0,0,0,.6),rgba(0,0,0,.6)),
       url('./images/job_logo.jpg') center/cover no-repeat;">
  <div class="container">
    <h1 class="display-5 fw-bold">Job Vacancies</h1>
    <p class="lead mb-4">Opportunities across trusted clinics</p>
    <button class="btn btn-success btn-lg" data-bs-toggle="modal" data-bs-target="#createJobModal">
      + Post Job
    </button>
  </div>
</section>

<div class="container my-5">
  <% if (jobs.length === 0) { %>
    <p>No jobs available. Create one</p>
  <% } %>

  <div class="row g-4">
    <% jobs.forEach(job => { %>
      <div class="col-md-6 col-lg-4">
        <div class="flip-card job-card">
          <div class="flip-card-inner">

            <!-- FRONT -->
            <div class="flip-card-front card shadow-sm">
              <div class="card-header fw-bold text-center">
                <%= job.title %> Wanted
              </div>
              <div class="card-body">
                <p class="mb-2"><strong>Clinic:</strong> <%= job.clinic %></p>
                <p class="mb-2"><strong>Location:</strong> <%= job.location %></p>
                <p class="mb-0"><strong>Salary:</strong> ر.س <%= job.salary %></p>
              </div>
            </div>

            <!-- BACK -->
            <div class="flip-card-back card text-white bg-dark">
              <div class="card-header fw-bold text-center">
                Job Details
              </div>
              <div class="card-body d-flex flex-column justify-content-between">
                <div>
                  <p class="mb-3"><%= job.description %></p>
                  <p class="mb-0"><strong>Contact:</strong> <%= job.contact %></p>
                </div>

                <div class="text-center mt-3">
                  <button class="btn btn-outline-light btn-sm me-2"
                    data-bs-toggle="modal"
                    data-bs-target="#editJobModal-<%= job.id %>">
                    Edit
                  </button>
                  <button class="btn btn-danger btn-sm"
                    data-bs-toggle="modal"
                    data-bs-target="#deleteJobModal-<%= job.id %>">
                    Delete
                  </button>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>

      <%- include("partials/editJobModal", { job }) %>
      <%- include("partials/deleteJobModal", { job }) %>

    <% }) %>
  </div>
</div>

<%- include("partials/createJobModal") %>

<style>
.hero-jobs {
  height: 45vh;
}

/* Container */
.job-card {
  height: 320px;
  perspective: 1000px;
}

/* Rotator */
.flip-card-inner {
  position: relative;
  width: 100%;
  height: 100%;
  transition: transform 0.6s;
  transform-style: preserve-3d;
}

.flip-card:hover .flip-card-inner {
  transform: rotateY(180deg);
}

/* Faces */
.flip-card-front,
.flip-card-back {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  backface-visibility: hidden;
  border-radius: 0.5rem;
  overflow: hidden;
}

/* Front gold */
.flip-card-front {
  background: linear-gradient(135deg, #d4af37, #c9a227);
  color: #1a1a1a;
}

/* Back */
.flip-card-back {
  transform: rotateY(180deg);
}

/* Header styling harmony */
.flip-card-front .card-header {
  background: rgba(0,0,0,0.08);
}

.flip-card-back .card-header {
  background: rgba(255,255,255,0.08);
}

/* Hover lift */
.job-card:hover {
  transform: translateY(-6px) scale(1.03);
}
</style>

<%- include("partials/footer") %>
