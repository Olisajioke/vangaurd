<%- include("partials/header.ejs") %>

<!-- HERO -->
<div class="jumbotron text-center text-white"
     style="background: linear-gradient(135deg,#4facfe,#00f2fe); padding:4rem 2rem;">
  <div class="container">
    <h1 class="display-5">Join Vanguard Optometry Network</h1>
    <p class="lead mb-0">A private professional community for optometrists in KSA</p>
  </div>
</div>

<!-- REGISTRATION -->
<div class="container my-5">
  <form action="/add_new_user"
        method="POST"
        enctype="multipart/form-data"
        class="mx-auto p-4"
        style="max-width:520px;background:#fff;border-radius:14px;box-shadow:0 8px 24px rgba(0,0,0,.08);">

    <h3 class="text-center mb-4">Create Account</h3>

    <!-- FIRST -->
    <div class="form-floating mb-3">
      <input type="text" class="form-control" name="fName" placeholder="First Name" required>
      <label>First Name</label>
    </div>

    <!-- LAST -->
    <div class="form-floating mb-3">
      <input type="text" class="form-control" name="lName" placeholder="Last Name" required>
      <label>Last Name</label>
    </div>

    <!-- LOCATION -->
    <div class="form-floating mb-3">
      <input type="text" class="form-control" name="location" placeholder="City in KSA" required>
      <label>Location in KSA</label>
    </div>

    <!-- EMAIL -->
    <div class="form-floating mb-3">
      <input type="email" class="form-control" name="email" placeholder="Email" required>
      <label>Email</label>
    </div>

    <!-- PASSWORD -->
      <div class="form-floating mb-3">
        <input type="password" class="form-control" name="password" placeholder="Password" required>
        <label>Password</label>
      </div>

      <div class="form-floating mb-3">
        <input type="password" class="form-control" name="confirmPassword" placeholder="Confirm Password" required>
        <label>Confirm Password</label>
      </div>


    <!-- VANGUARD CODE -->
    <div class="form-floating mb-3">
      <input type="text"
             class="form-control border-primary"
             name="vanguard"
             placeholder="Vanguard Code"
             required>
      <label class="text-primary">Vanguard Access Code</label>
    </div>
    <small class="text-muted d-block mb-3">
      This private community requires a valid Vanguard code to register.
    </small>

    <!-- PROFILE PIC -->
    <div class="mb-3">
      <label class="form-label">Profile Picture</label>
      <input type="file" name="profilepic" class="form-control" accept="image/*">
    </div>

    <button class="btn btn-primary w-100 btn-lg">
      Register
    </button>

  </form>
</div>

<%- include("partials/footer") %>
