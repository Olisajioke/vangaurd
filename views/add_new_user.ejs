<%- include("partials/header.ejs") %>

<!-- Jumbotron -->
<div class="jumbotron jumbotron-fluid text-center text-black" style="background-image: url('/images/articles_imsu.jpg'); background-size: cover; background-position: center; padding: 5rem 2rem;">
  <div class="container mt-4">
    <h1 class="display-4 ">REGISTER BELOW!</h1>
    <p class="lead">Join us today and become part of our community!</p>
  </div>
</div>

<!-- Registration Form -->
<div class="container my-5">
  <form action="/add_new_user" method="POST" enctype="multipart/form-data" class="mx-auto p-4" style="max-width: 500px; background: #fff; border-radius: 10px; box-shadow: 0 6px 18px rgba(0,0,0,0.1);">
    
    <h2 class="text-center mb-4">Create Account</h2>

    <!-- First Name -->
    <div class="form-floating mb-3">
      <input type="text" class="form-control" id="fName" name="fName" placeholder="First Name" required>
      <label for="fName">First Name</label>
    </div>

    <!-- Last Name -->
    <div class="form-floating mb-3">
      <input type="text" class="form-control" id="lName" name="lName" placeholder="Last Name" required>
      <label for="lName">Last Name</label>
    </div>

    <!-- Email -->
    <div class="form-floating mb-3">
      <input type="email" class="form-control" id="email" name="email" placeholder="Email Address" required>
      <label for="email">Email Address</label>
    </div>

    <!-- Password -->
    <div class="form-floating mb-3">
      <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
      <label for="password">Password</label>
    </div>

    <!-- Profile Picture -->
    <div class="mb-3">
      <label for="profilepic" class="form-label">Upload Profile Picture</label>
      <input class="form-control" type="file" id="profilepic" name="profilepic" accept="image/*">
    </div>

    <!-- Submit Button -->
    <button type="submit" class="btn btn-primary btn-lg w-100">Register</button>

  </form>
</div>

<%- include('partials/footer') %>
