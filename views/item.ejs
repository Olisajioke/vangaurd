<%- include("partials/header") %>

<div class="container mt-4">

  <div class="card shadow-lg">
    <div class="card-body">

      <!-- BIG IMAGE CAROUSEL -->
      <% if (item.images && item.images.length > 0) { %>
        <div id="itemCarousel-<%= item.id %>" class="carousel slide mb-4">
          <div class="carousel-inner">

            <% item.images.forEach((img, index) => { %>
              <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                <img src="/uploads/<%= img %>"
                     class="d-block w-100 rounded"
                     style="max-height:500px;object-fit:contain;">
              </div>
            <% }) %>

          </div>

          <% if (item.images.length > 1) { %>
            <button class="carousel-control-prev" type="button"
                    data-bs-target="#itemCarousel-<%= item.id %>" data-bs-slide="prev">
              <span class="carousel-control-prev-icon"></span>
            </button>

            <button class="carousel-control-next" type="button"
                    data-bs-target="#itemCarousel-<%= item.id %>" data-bs-slide="next">
              <span class="carousel-control-next-icon"></span>
            </button>
          <% } %>
          <div class="d-flex justify-content-between align-items-start">
  <h4 class="card-title"><%= item.title %></h4>

        <form action="/toggle-save/<%= item.id %>" method="POST">
            <button class="btn btn-link fs-4 p-0 border-0">
            <% if (isSaved) { %>‚ù§Ô∏è<% } else { %>ü§ç<% } %>
            </button>
        </form>
        </div>
      <% } %>

      <!-- DETAILS -->
      <h2 class="mb-3"><%= item.title %></h2>

      <h4 class="text-success mb-3">ÿ±.ÿ≥ <%= item.price %></h4>

      <p><strong>Seller:</strong> <%= item.seller %></p>
      <p><strong>Contact:</strong> <%= item.contact %></p>
      <p><strong>Location:</strong> <%= item.location %></p>

      <hr>

      <p><%= item.description %></p>

      <a href="/market" class="btn btn-outline-secondary mt-3">
        ‚Üê Back to Market
      </a>
        <form action="/toggle-save/<%= item.id %>" method="POST">
            <button class="btn btn-link fs-3 border-0">
                <% if (isSaved) { %>‚ù§Ô∏è Saved<% } else { %>ü§ç Save<% } %>
            </button>
        </form>

      <form action="/saveitem/<%= item.id %>" method="POST" class="d-inline">
        <button class="btn btn-warning">
            Save Item
        </button>
        </form>
        <a href="/saved" class="btn btn-outline-secondary">View Saved</a>


    </div>
  </div>

</div>

<%- include("partials/footer") %>
