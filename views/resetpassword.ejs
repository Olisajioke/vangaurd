<%- include("partials/header") %>

<section class="reset-wrap d-flex align-items-center justify-content-center">
  <div class="reset-card shadow-sm">

    <div class="reset-icon mb-3">
      <i class="fa-solid fa-lock"></i>
    </div>

    <h3 class="reset-title">Set a new password</h3>

    <p class="reset-sub">
      Choose a secure password you haven’t used before.
    </p>

    <form method="POST" action="/reset-password/<%= token %>" class="mt-4">

      <div class="form-floating mb-3">
        <input type="password"
               name="password"
               id="password"
               class="form-control"
               placeholder="New password"
               required>
        <label>New password</label>
      </div>

      <div class="form-floating mb-3">
        <input type="password"
               name="confirm_password"
               id="confirm_password"
               class="form-control"
               placeholder="Confirm password"
               required>
        <label>Confirm password</label>
      </div>

      <button class="btn btn-success w-100 py-2">
        Update Password
      </button>

    </form>

    <div class="reset-back mt-3">
      <a href="/login">← Back to login</a>
    </div>

  </div>
</section>

<style>
.reset-wrap {
  min-height: calc(100vh - 120px);
  background:
    radial-gradient(600px 300px at 20% 20%, rgba(80,140,255,.12), transparent 60%),
    radial-gradient(500px 250px at 80% 80%, rgba(120,200,180,.12), transparent 60%),
    linear-gradient(180deg,#f7f9fc,#eef3f8);
  padding: 40px 20px;
}

.reset-card {
  background: #fff;
  border-radius: 16px;
  padding: 32px 28px 26px;
  max-width: 420px;
  width: 100%;
  text-align: center;
  border: 1px solid #e7edf3;
}

.reset-icon {
  font-size: 28px;
  color: #2e8b57;
}

.reset-title {
  font-weight: 600;
  margin-bottom: 6px;
  color: #2d3a45;
}

.reset-sub {
  font-size: 0.9rem;
  color: #6c7a86;
}

.reset-back a {
  font-size: 0.85rem;
  color: #6c7a86;
  text-decoration: none;
}

.reset-back a:hover {
  text-decoration: underline;
}
</style>

<%- include("partials/footer") %>
