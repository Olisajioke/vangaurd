<%- include("../partials/header") %>

<div class="admin">
  <div class="container py-4" style="max-width:700px;">

    <h3 class="admin__title mb-3">Edit Post</h3>

    <form method="POST" action="/admin/posts/<%= post.id %>/edit">

      <div class="mb-3">
        <label class="form-label">Title</label>
        <input class="form-control"
               name="title"
               value="<%= post.title %>"
               required>
      </div>

      <div class="mb-3">
        <textarea class="form-control"
          name="content"
          rows="8"
          placeholder="No content stored for this post"><%= post.content || "" %></textarea>
      </div>

      <button class="admin-btn">Save Changes</button>

    </form>

  </div>
</div>

<%- include("../partials/footer") %>
