<%- include("../partials/header") %>

<div class="admin">
  <div class="container py-4" style="max-width:720px;">

    <h3 class="admin__title mb-3">
      <% if (type === "job") { %>Edit Job Post
      <% } else if (type === "review") { %>Edit Clinic Review
      <% } else { %>Edit Post<% } %>
    </h3>

    <form method="POST"
          action="/admin/posts/<%= post.id %>/edit"
          enctype="multipart/form-data">

      <!-- BASE POST -->
      <div class="mb-3">
        <label class="form-label">Title</label>
        <input class="form-control"
               name="title"
               value="<%= post.title || '' %>"
               required>
      </div>

      <div class="mb-3">
        <label class="form-label">Content</label>
        <textarea class="form-control"
                  name="content"
                  rows="6"><%= post.content || '' %></textarea>
      </div>

      <div class="mb-3">
        <label class="form-label">Location</label>
        <input class="form-control"
               name="location"
               value="<%= post.location || '' %>">
      </div>

      <div class="mb-3">
        <label class="form-label">Contact</label>
        <input class="form-control"
               name="contact"
               value="<%= post.contact || '' %>">
      </div>

      <!-- IMAGES -->
      <hr class="my-4">
      <h5 class="mb-3">Images</h5>

      <% [1,2,3].forEach(n => { %>
        <div class="mb-3">
          <label class="form-label">Image <%= n %></label>

          <% if (post["image"+n]) { %>
            <div class="mb-2">
              <img src="/uploads/<%= post["image"+n] %>"
                   style="max-width:140px;border-radius:8px;">
            </div>
          <% } %>

          <input type="file"
                 class="form-control"
                 name="image<%= n %>">
        </div>
      <% }) %>

      <!-- JOB -->
      <% if (type === "job" && extra) { %>
        <hr class="my-4">
        <h5 class="mb-3">Job Details</h5>

        <div class="mb-3">
          <label class="form-label">Clinic</label>
          <input class="form-control"
                 name="clinic"
                 value="<%= extra.clinic || '' %>">
        </div>

        <div class="mb-3">
          <label class="form-label">Salary</label>
          <input class="form-control"
                 name="salary"
                 value="<%= extra.salary || '' %>">
        </div>

        <div class="mb-3">
          <label class="form-label">Description</label>
          <textarea class="form-control"
                    name="description"
                    rows="5"><%= extra.description || '' %></textarea>
        </div>
      <% } %>

      <!-- REVIEW -->
      <% if (type === "review" && extra) { %>
        <hr class="my-4">
        <h5 class="mb-3">Clinic Review Details</h5>

        <div class="mb-3">
          <label class="form-label">Clinic Name</label>
          <input class="form-control"
                 name="clinic_name"
                 value="<%= extra.clinic_name || '' %>">
        </div>

        <div class="mb-3">
          <label class="form-label">Rating</label>
          <input type="number"
                 min="1"
                 max="5"
                 class="form-control"
                 name="rating"
                 value="<%= extra.rating || '' %>">
        </div>

        <div class="mb-3">
          <label class="form-label">Pros</label>
          <textarea class="form-control"
                    name="pros"
                    rows="4"><%= extra.pros || '' %></textarea>
        </div>

        <div class="mb-3">
          <label class="form-label">Cons</label>
          <textarea class="form-control"
                    name="cons"
                    rows="4"><%= extra.cons || '' %></textarea>
        </div>

        <div class="mb-3">
          <label class="form-label">Recommendation</label>
          <textarea class="form-control"
                    name="recommendation"
                    rows="4"><%= extra.recommendation || '' %></textarea>
        </div>
      <% } %>

      <div class="d-flex justify-content-between mt-4">
        <a href="/admin/posts" class="btn btn-light">Cancel</a>
        <button class="admin-btn admin-btn--primary">
          Save Changes
        </button>
      </div>

    </form>

  </div>
</div>

<%- include("../partials/footer") %>
