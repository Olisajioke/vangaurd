<%- include("../partials/header") %>

<div class="admin">
  <div class="container py-4">

    <!-- HEADER -->
    <div class="admin-header mb-4">
      <h2 class="admin-title mb-1">All Posts</h2>
      <div class="admin-subtitle">
        Posts and job listings created by users
      </div>
    </div>

    <h3 class="admin__title mb-3">Posts</h3>

    <div class="admin-table">

      <div class="admin-table__head">
        <div class="col-title">Title</div>
        <div class="col-author">Author</div>
        <div class="col-date">Date</div>
        <div class="col-actions"></div>
      </div>

      <% (posts || []).forEach(p => { %>

        <div class="admin-table__row">

          <!-- TITLE -->
          <div class="col-title">
            <span class="post-title"><%= p.title %></span>
          </div>

          <!-- AUTHOR -->
          <div class="col-author">
            <%= p.fname %> <%= p.lname %>
          </div>

          <!-- DATE -->
          <div class="col-date">
            <%= new Date(p.created_at).toLocaleDateString() %>
          </div>

          <!-- ACTIONS -->
          <div class="col-actions">

            <!-- EDIT -->
            <a href="/admin/posts/<%= p.id %>/edit"
               class="btn-toggle me-2">
              Edit
            </a>

            <!-- VIEW -->
            <%
              const viewUrl = (p.type === "job")
                ? `/jobs/${p.id}`
                : `/view_posts/${p.id}`;
            %>

            <a href="<%= viewUrl %>"
               class="btn-toggle me-2">
              View
            </a>

            <!-- DELETE -->
            <button class="btn-toggle"
                    data-bs-toggle="modal"
                    data-bs-target="#deletePostModal-<%= p.id %>">
              Delete
            </button>

          </div>

        </div>

        <%- include("partials/deletepostModal", { post: p }) %>

      <% }) %>

    </div>

  </div>
</div>

<style>
.admin-table {
  background: #fff;
  border: 1px solid #e6ece9;
  border-radius: 12px;
  overflow: hidden;
}

.admin-table__head,
.admin-table__row {
  display: grid;
  grid-template-columns: 3fr 2fr 1.2fr 1.5fr;
  align-items: center;
  padding: 14px 18px;
}

.admin-table__head {
  background: #f3f6f4;
  font-weight: 600;
  color: #44554c;
  font-size: 0.85rem;
}

.admin-table__row {
  border-top: 1px solid #eef2f0;
  transition: background 0.15s ease;
}

.admin-table__row:hover {
  background: #fafcfb;
}

.col-title {
  font-weight: 500;
  color: #2f3e36;
}

.col-author {
  color: #55665e;
  font-size: 0.9rem;
}

.col-date {
  color: #7a8a83;
  font-size: 0.85rem;
}

.col-actions {
  text-align: right;
}

.post-title {
  display: inline-block;
  max-width: 100%;
  word-break: break-word;
}

.btn-toggle {
  border: 1px solid #d6ded9;
  background: #fff;
  padding: 6px 12px;
  border-radius: 8px;
  font-size: 0.8rem;
  cursor: pointer;
  text-decoration: none;
  color: #2f3e36;
}

.btn-toggle:hover {
  background: #f3f6f4;
}
</style>

<%- include("../partials/footer") %>
