<%- include("partials/header") %>

<section class="public-user">
  <div class="public-user__container">

    <!-- HERO -->
    <div class="public-user-hero">

      <div class="public-user-hero__bg"></div>

      <div class="public-user-hero__content">
        <% if (user.profilepic) { %>
          <img src="/uploads/<%= user.profilepic %>" class="public-user-avatar">
        <% } else { %>
          <div class="public-user-avatar public-user-avatar--placeholder">ðŸ‘¤</div>
        <% } %>

        <div class="public-user-identity">
          <h1><%= user.fullname %></h1>
          <div class="public-user-meta">
            <span><%= user.location || "Location not specified" %></span>
          </div>
        </div>
      </div>
    </div>

    <!-- DETAILS -->
    <div class="public-user-card">
      <h3>Professional Details</h3>

      <div class="public-user-grid">
        <div>
          <label>Full Name</label>
          <div><%= user.fname %> <%= user.lname %></div>
        </div>

        <div>
          <label>Location</label>
          <div><%= user.location || "â€”" %></div>
        </div>

        <div>
          <label>Email</label>
          <div><%= user.email %></div>
        </div>
      </div>
    </div>

  </div>
</section>

<style>
.public-user{
  background:linear-gradient(#f8fafc,#eef2f7);
  padding:40px 20px 90px;
}

.public-user__container{
  max-width:900px;
  margin:0 auto;
}

/* HERO */
.public-user-hero{
  position:relative;
  border-radius:20px;
  overflow:hidden;
  margin-bottom:28px;
  box-shadow:0 10px 28px rgba(15,23,42,.08);
}

.public-user-hero__bg{
  height:140px;
  background:linear-gradient(135deg,#2563eb,#4f46e5);
}

.public-user-hero__content{
  display:flex;
  align-items:center;
  gap:20px;
  padding:0 26px 22px;
  margin-top:-46px;
}

.public-user-avatar{
  width:110px;
  height:110px;
  border-radius:50%;
  object-fit:cover;
  border:5px solid #fff;
  background:#fff;
  box-shadow:0 6px 16px rgba(0,0,0,.15);
}

.public-user-avatar--placeholder{
  display:flex;
  align-items:center;
  justify-content:center;
  font-size:2.4rem;
  color:#64748b;
}

.public-user-identity h1{
  margin:0 0 4px;
  font-size:1.6rem;
  color:#0f172a;
  letter-spacing:.2px;
}

.public-user-meta{
  font-size:.95rem;
  color:#475569;
}

/* CARD */
.public-user-card{
  background:#fff;
  border:1px solid #e2e8f0;
  border-radius:16px;
  padding:20px 22px;
  box-shadow:0 6px 18px rgba(15,23,42,.06);
}

.public-user-card h3{
  margin:0 0 14px;
  font-size:1.05rem;
  color:#0f172a;
}

/* GRID */
.public-user-grid{
  display:grid;
  grid-template-columns:repeat(2,1fr);
  gap:16px 24px;
  font-size:.98rem;
}

.public-user-grid label{
  font-size:.75rem;
  color:#64748b;
  display:block;
  margin-bottom:2px;
}
</style>

<%- include("partials/footer") %>
