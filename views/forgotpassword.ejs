<%- include("partials/header") %>

<section class="forgot-wrap d-flex align-items-center justify-content-center">
  <div class="forgot-card shadow-sm">

    <div class="forgot-icon mb-3">
      <i class="fa-solid fa-key"></i>
    </div>

    <h3 class="forgot-title">Forgot your password?</h3>

    <p class="forgot-sub">
      Enter your email and we’ll send you a secure reset link.
    </p>

    <form method="POST" action="/forgot-password" class="mt-4">
      <div class="form-floating mb-3">
        <input type="email"
               name="email"
               class="form-control"
               placeholder="name@example.com"
               required>
        <label>Email address</label>
      </div>

      <button class="btn btn-primary w-100 py-2">
        Send Reset Link
      </button>
    </form>

    <div class="forgot-back mt-3">
      <a href="/login">← Back to login</a>
    </div>

  </div>
</section>

<style>
.forgot-wrap {
  min-height: calc(100vh - 120px);
  background:
    radial-gradient(600px 300px at 20% 20%, rgba(80,140,255,.12), transparent 60%),
    radial-gradient(500px 250px at 80% 80%, rgba(120,200,180,.12), transparent 60%),
    linear-gradient(180deg,#f7f9fc,#eef3f8);
  padding: 40px 20px;
}

.forgot-card {
  background: #fff;
  border-radius: 16px;
  padding: 32px 28px 26px;
  max-width: 420px;
  width: 100%;
  text-align: center;
  border: 1px solid #e7edf3;
}

.forgot-icon {
  font-size: 28px;
  color: #5c7cfa;
}

.forgot-title {
  font-weight: 600;
  margin-bottom: 6px;
  color: #2d3a45;
}

.forgot-sub {
  font-size: 0.9rem;
  color: #6c7a86;
  margin-bottom: 4px;
}

.forgot-back a {
  font-size: 0.85rem;
  color: #6c7a86;
  text-decoration: none;
}

.forgot-back a:hover {
  text-decoration: underline;
}
</style>

<%- include("partials/footer") %>
