<!-- EDIT MODAL -->
<div class="modal fade" id="editRelModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">

      <form action="/relationships/edit/<%= rel.post_id %>"
            method="POST"
            enctype="multipart/form-data">

        <div class="modal-header">
          <h5>Edit Profile</h5>
          <button class="btn-close" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">

          <div class="row">
            <div class="col-md-6 mb-2">
              <label>Name</label>
              <input name="name" class="form-control" value="<%= rel.name %>">
            </div>

            <div class="col-md-3 mb-2">
              <label>Age</label>
              <input name="age" class="form-control" value="<%= rel.age %>">
            </div>

            <div class="col-md-3 mb-2">
              <label>Sex</label>
              <select name="sex" class="form-control">
                <option <%= rel.sex==='Male'?'selected':'' %>>Male</option>
                <option <%= rel.sex==='Female'?'selected':'' %>>Female</option>
              </select>
            </div>
          </div>

          <div class="mb-2">
            <label>Looking For</label>
            <input name="looking_for" class="form-control" value="<%= rel.looking_for %>">
          </div>

          <div class="mb-2">
            <label>Bio</label>
            <textarea name="bio" class="form-control"><%= rel.bio %></textarea>
          </div>

          <div class="mb-2">
            <label>Thought</label>
            <textarea name="thought" class="form-control"><%= rel.thought %></textarea>
          </div>

          <div class="row">
            <div class="col-md-6 mb-2">
              <label>City</label>
              <input name="city" class="form-control" value="<%= rel.city %>">
            </div>

            <div class="col-md-6 mb-2">
              <label>Contact</label>
              <input name="contact" class="form-control" value="<%= rel.contact %>">
            </div>
          </div>

          <hr>

          <label>Change Images</label>

          <div class="mb-2">
            <input type="file" name="images" class="form-control">
          </div>
          <div class="mb-2">
            <input type="file" name="images" class="form-control">
          </div>
          <div class="mb-2">
            <input type="file" name="images" class="form-control">
          </div>

        </div>

        <div class="modal-footer">
          <button class="btn btn-primary">Save Changes</button>
        </div>

      </form>

    </div>
  </div>
</div>
