<div class="modal fade" id="editItemModal-<%= item.id %>">
  <div class="modal-dialog">
    <div class="modal-content">
      <form action="/edititem/<%= item.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="modal-header">
          <h5 class="modal-title">Edit Item</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">
          <input name="title" class="form-control mb-2" value="<%= item.title %>">
          <input name="seller" class="form-control mb-2" value="<%= item.seller %>">
          <input name="location" class="form-control mb-2" value="<%= item.location %>">
          <input name="price" class="form-control mb-2" value="<%= item.price %>">
          <input name="contact" class="form-control mb-2" value="<%= item.contact %>">
          <textarea name="description" class="form-control mb-2"><%= item.description %></textarea>

          <% if (item.images && item.images.length > 0) { %>
            <div class="mb-2">
              <% item.images.forEach(img => { %>
                <img src="/uploads/<%= img %>"
                     style="width:70px;height:70px;object-fit:cover;border-radius:6px;margin-right:5px;">
              <% }) %>
            </div>
          <% } %>

          <label class="form-label">Replace images</label>
          <input type="file"
                 name="images"
                 class="form-control mb-2"
                 accept="image/*"
                 multiple>
          <small class="text-muted">Upload up to 3 images (leave empty to keep current)</small>
        </div>

        <div class="modal-footer">
          <button class="btn btn-primary">Update</button>
        </div>
      </form>
    </div>
  </div>
</div>
