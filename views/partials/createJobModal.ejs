<div class="modal fade" id="createJobModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <form action="/createJobs" method="POST">
        <div class="modal-header">
          <h5 class="modal-title">Post Job</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">
          <input name="title" class="form-control mb-2" placeholder="Job Title" required>
          <input name="clinic" class="form-control mb-2" placeholder="Clinic">
          <input name="location" class="form-control mb-2" placeholder="Location">

          <!-- Salary range select -->
          <select name="salary" class="form-select mb-2">
            <option value="">Select Salary (SAR)</option>
            <option>5000</option>
            <option>5500</option>
            <option>6000</option>
            <option>6500</option>
            <option>7000</option>
            <option>7500</option>
            <option>8000</option>
            <option>8500</option>
            <option>9000</option>
            <option>9500</option>
            <option>10000</option>
          </select>

          <input name="contact" class="form-control mb-2" placeholder="Contact">
          <textarea name="description" class="form-control" placeholder="Description"></textarea>
        </div>

        <div class="modal-footer">
          <button class="btn btn-success">Create</button>
        </div>
      </form>
    </div>
  </div>
</div>
